{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Product",
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9_-]+$"
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "description": {
        "type": "string",
        "minLength": 10
      },
      "price": {
        "type": "number",
        "minimum": 0.01
      },
      "currency": {
        "type": "string",
        "enum": ["USD", "EUR", "BRL", "GBP"]
      },
      "stock": {
        "type": "integer",
        "minimum": 0
      },
      "categories": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1
      },
      "createdAt": {
        "type": "string",
        "format": "date-time"
      },
      "updatedAt": {
        "type": "string",
        "format": "date-time"
      }
    },
    "required": ["id", "name", "price", "currency", "stock", "categories", "createdAt"],
    "additionalProperties": false
  }
  